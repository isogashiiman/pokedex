<p id="notice"><%= notice %></p>

<h1>Types</h1>

<table>
  <thead>
    <tr>
      <th>Numero</th>
      <th>Avatar</th>
      <th>Nom</th>
      <th>Niveau</th>
      <th>Type</th>
      <th>Attaques</th>
      <th>Actions</th>
      <th colspan="3"></th>
    </tr>
  </thead>
<% pokemon.avatar.exists? ? image_tag(pokemon.avatar.url(:thumb)) :'&empty:'.html_safe %>
  <tbody>
    <% @types.each do |type| %>
      <tr>
        <td><%= type.name %></td>
        <td><%= type_badge(@type, @type.color) %></td>
        <td><%= link_to 'Show', type %></td>
        <td><%= link_to 'Edit', edit_type_path(type) %></td>
        <td><%= link_to 'Destroy', type, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Type', new_type_path %>
