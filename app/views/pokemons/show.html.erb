<h1>Afficher un Pokemon </h1>

<% if @pokemon.avatar.exists? %>
	<div style="text-align:center;">
		<%=image_tag @pokemon.avatar.url(:medium) %>
	</div>
<% end %>

<p>Nom : <%= @pokemon.name %></p>
<p>Numéro : <%= @pokemon.number %></p>
<p>Niveau : <%= @pokemon.level %></p>
<p>Points de vie : <%= @pokemon.health_points %> </p>


<p>
	Type :
		<%= type_badge(@pokemon.type) %>
<p>

</p>
<p>
	<h2> Liste d'attaques : </h2>
	<% render partial: 'moves/moves_list', locals: { moves: @pokemon.moves } %>

</p>
<p>
	<%= link_to 'Editer', edit_pokemon_path(@pokemon), class: 'btn btn-warning' %> 
</p>
<p>
	<%= link_to 'Retour à la liste des Pokemons' , pokemons_path, class: 'btn btn-success' %>
</p>